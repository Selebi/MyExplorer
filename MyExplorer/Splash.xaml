<Window x:Class="MyExplorer.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Splash" Height="200" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/SintekBack.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Sintek Explorer" 
                   VerticalAlignment="Top" Foreground="White" FontSize="36" FontFamily="Consolas"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Загрузка..." 
                   VerticalAlignment="Bottom" Margin="0,12"  Foreground="White"/>

    </Grid>
</Window>
