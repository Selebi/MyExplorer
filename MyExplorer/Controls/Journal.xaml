<UserControl x:Class="MyExplorer.Controls.Journal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyExplorer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBox Margin="10,60,10,42" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding JournalText}" Style="{DynamicResource TextBoxStyle}"/>
        <Label Content="Журнал событий" Style="{StaticResource LabelStyle}" HorizontalAlignment="Stretch" Margin="20,20,20,0" MaxWidth="200" VerticalAlignment="Top" Height="27" FontSize="14"/>
        <Button Content="Назад" HorizontalAlignment="Right" Margin="0,0,10,10" 
            VerticalAlignment="Bottom" Width="160" Style="{StaticResource ButtonsMenu}" Command="{Binding Back}"/>

    </Grid>
</UserControl>
